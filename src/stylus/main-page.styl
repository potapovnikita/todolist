[v-cloak] 
	display none
.todo-list
	margin-top 30px
.todo-item
	position relative
	&-caption
		width 300px
		display inline-block
		background lightgrey
		margin 5px 5px 0 0
		cursor pointer
    	
	&-delete 
		&:hover
			color red
			cursor pointer
	&-edit
		margin-right 5px
		&:hover
			color orange
			cursor pointer
.todo-input-edit
	top 3px
	position absolute
	width 315px
	display none
	
.help 
	color grey

    